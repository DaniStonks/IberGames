<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/whiteModeForum.css">
    <% if (typeof voteSystem != 'undefined') { %>
    <script src="/scripts/voting.js"></script>
    <% } %>
    <title>IberGames - Forum</title>
</head>
<body>
    <header>
        <div id="logo_and_buttons">
            <div id="logoDiv">
                <img src="" alt="LogoTipo" class="logo">
            </div>
            <div id="formAut">
                <form action="/search" method="get" id="searchForm" name="searchForm">
                    <input type="text" name="search" id="search" placeholder="Search...">
                </form>
                <div id="buttonsDiv">
                    <button id="themeButton" onclick="changeTheme()"><img></button>
                    <a href="/login" id="loginButton"><img src="" alt="loginButton"></a>
                <% if (typeof user != 'undefined'){ %>
                    <form action="/logout" method="post">
                        <button type="submit" id="logoutButton"><img></button>
                    </form>
                <% } %>
                </div>
            </div>
        </div>
        <ul id="navigationPages">
            <% if (typeof user != 'undefined'){ %>
                <li><a href="/gestao-posts">Gestão Posts</a></li>
                <% if (user.Regist_gestor === 0){ %>
                    <li><a href="/gestao-categorias">Gestão Categorias</a></li>
                <% } %>
            <% } %>
        </ul>
    </header>